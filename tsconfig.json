{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["nuxt", "@nuxt/types", "@nuxtjs/composition-api"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~": ["."],
      "@/*": ["./*"],
      "@": ["."],
      "#app": ["./node_modules/@nuxt/types/app"],
      "#imports": ["./node_modules/nuxt/dist/types/imports.d.ts"],
      "#build": ["./*"],
      "#components": ["./*"],
      "#composables": ["./*"],
      "#pages": ["./*"],
      "#pinia": ["./*"],
      "#store": ["./*"],
      "#app/*": ["./*"],
      "#build/*": ["./*"],
      "#components/*": ["./*"],
      "#composables/*": ["./*"],
      "#imports/*": ["./*"],
      "#pages/*": ["./*"],
      "#pinia/*": ["./*"],
      "#store/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".output", ".nuxt"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue"]
}
